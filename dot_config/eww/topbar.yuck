; ------------------------------ Active Window ------------------------------

(defwidget active_window [] 
  (label :text `${active_window}`
         :limit-width 45))
;(defpoll active_window :interval "10ms"
;  `hyprctl activewindow -j | jq -r ".title" | head -c 30`)

;(deflisten active_window :initial "No window found" 
